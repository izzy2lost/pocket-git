<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/layout_project" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/action_sort_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_sort_name"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name"/>
        <ImageView android:id="@+id/image_sort_name" android:layout_width="32dp" android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/action_sort_date" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_sort_date"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Date"/>
        <ImageView android:id="@+id/image_sort_date" android:layout_width="32dp" android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/action_sort_size" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_sort_size"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size"/>
        <ImageView android:id="@+id/image_sort_size" android:layout_width="32dp" android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/action_sort_type" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_sort_type"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Type"/>
        <ImageView android:id="@+id/image_sort_type" android:layout_width="32dp" android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>
